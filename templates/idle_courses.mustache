<div class="container-fluid p-0">
    <h4 class="mt-5 mb-3 text-center">
        {{#str}} template:other_courses, block_custom_course_progress {{/str}} :
    </h4>
    <div class="row">
        {{#idlecourses}}
            <div class="col-md-4 col-sm-6">
                <div class="card card-progress mt-3 mb-3">
                    {{#courseimage}}
                        <div class="card-img dashboard-card-img idlecourse-img" style="background-image:url({{{courseimage}}})" alt="Image {{{fullname}}}"></div>
                    {{/courseimage}}
                    <div class="card-body">
                        <h5 class="card-title bold mt-0">
                            <a href="{{{courselink}}}">{{{fullname}}}</a>
                        </h5>
                    </div>
                    <div class="card-footer">
                        <h6>
                            <a href="{{{courselink}}}">{{#str}} template:course_access, block_custom_course_progress {{/str}}</a>
                        </h6>
                    </div>
                </div>
            </div>
        {{/idlecourses}}
        {{^idlecourses}}
            <div class="text-center" data-region="empty-message">
                <img class="empty-placeholder-image-lg"
                    src="{{noitemsimgurl}}"
                    alt="{{#str}} noitems, block_recentlyaccesseditems {{/str}}"
                    role="presentation">
                <p class="text-muted mt-3 mb-0">{{#str}} noitems, block_recentlyaccesseditems {{/str}}</p>
            </div>
        {{/idlecourses}}
    </div>
</div>